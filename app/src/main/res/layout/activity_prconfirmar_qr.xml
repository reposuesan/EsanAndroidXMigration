<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.puntosreunion.postgrado.confirmar.PRConfirmarQRActivity">

    <SurfaceView
        android:id="@+id/svCamara_prconfirmarqr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/btnCerrar_prconfirmaqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:contentDescription="@string/cancelar_accion"
            android:src="@drawable/ico_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:foregroundGravity="top|right"
    />

    <TextView
            android:id="@+id/lblTexto_prconfirmaqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="411dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="731dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/prbCargando_prconfirmarqr"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:theme="@style/Progress"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
