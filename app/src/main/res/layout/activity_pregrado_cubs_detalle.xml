<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pe.edu.esan.appostgrado.view.puntosreunion.pregrado.PregradoCubsDetalleActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar_detalle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"/>

    <!--<TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:id="@+id/textview_title_prereserva_detalle"
            android:text="@string/prereserva_efectuada_title"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->

    <ImageView
            android:layout_marginTop="36dp"
            android:layout_gravity="center"
            android:src="@drawable/img_check_detalle"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

    <LinearLayout
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@color/md_black_1000"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:text="@string/solicitante_text"
                android:id="@+id/tv_solicitante_detalle_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_solicitante_detalle"
                android:textColor="@color/md_black_1000"
                android:layout_marginLeft="24dp"
                tools:text="Daniel Bedoya Martínez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                    android:textColor="@color/md_black_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:text="@string/horas_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="@color/md_black_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:text="@string/fecha_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="@color/md_black_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_estado_detalle_label"
                    android:text="@string/estado_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/tv_horario_detalle"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="48dp"
                    tools:text="11:00 AM - 2:00 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/tv_fecha_detalle"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="48dp"
                    tools:text="28/03/2019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:textColor="@color/md_black_1000"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="48dp"
                    android:id="@+id/tv_estado_detalle"
                    android:text="@string/sin_confirmar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_mensaje_prereserva_realizada"
            android:layout_weight="1.4"
            android:paddingTop="16dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:textSize="14sp"
            android:gravity="start"
            tools:textColor="@color/green"
            android:textStyle="bold|italic"
            tools:text="Pre-reserva realizada, se le asignó el Punto 01, ubicado en la Sala 10 (Cerrado) (A la espalda de La Casita.), recuerde que deberá confirmar la pre-reserva, lo cuál podrá hacer desde 10 minutos antes hasta 10 minutos después del inicio de la reserva"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>


    <RelativeLayout
            android:layout_weight="0.8"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <Button
                android:layout_alignParentBottom="true"
                android:id="@+id/detalle_volver_pr_button"
                android:layout_marginTop="36dp"
                android:textColor="@color/md_white_1000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/shape_button_puntos_reunion"
                android:textAllCaps="false"
                android:text="@string/volver_menu_principal_button"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
