<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="pe.edu.esan.appostgrado.view.mas.laboratorios.PregradoLabsConfirmacionActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar_confirmacion_lab"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:text="@string/confirmacion_de_prereservas_title"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <ImageView
                android:layout_weight="2"
                android:id="@+id/img_confirmacion_reserva_labs"
                android:layout_gravity="center"
                tools:src="@drawable/conf_x_img"
                android:layout_width="250dp"
                android:layout_height="0dp"/>

        <TextView
                android:layout_weight="1"
                android:id="@+id/tv_mensaje_confirmacion_prereserva_lab"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                tools:textColor="@color/esan_red"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="No se encuentra en el rango de confirmación, recuerde que tiene 10 minutos antes y después de la hora de inicio de su reserva. Próxima reserva inicia a las 7:00PM"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

    </LinearLayout>

</LinearLayout>
