<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <View
        android:id="@+id/view17"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="24dp"
        android:background="@color/esan_rojo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgAlumno_itomarasistencia"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/view17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnAsistencia_itomarasistencia"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/view17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblNombre_itomarasistencia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/lblCodigo_itomarasistencia"
        app:layout_constraintEnd_toStartOf="@+id/btnAsistencia_itomarasistencia"
        app:layout_constraintStart_toEndOf="@+id/imgAlumno_itomarasistencia"
        app:layout_constraintTop_toTopOf="@+id/imgAlumno_itomarasistencia" />

    <TextView
        android:id="@+id/lblCodigo_itomarasistencia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/lblPorcFaltas"
        app:layout_constraintEnd_toStartOf="@+id/btnAsistencia_itomarasistencia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgAlumno_itomarasistencia"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre_itomarasistencia" />

    <TextView
        android:id="@+id/lblPorcFaltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgAlumno_itomarasistencia"
        app:layout_constraintEnd_toStartOf="@+id/lblPorcInhabilitado"
        app:layout_constraintStart_toEndOf="@+id/imgAlumno_itomarasistencia"
        app:layout_constraintTop_toBottomOf="@+id/lblCodigo_itomarasistencia" />

    <TextView
        android:id="@+id/lblPorcInhabilitado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnAsistencia_itomarasistencia"
        app:layout_constraintEnd_toStartOf="@+id/btnAsistencia_itomarasistencia"
        app:layout_constraintStart_toEndOf="@+id/lblPorcFaltas"
        app:layout_constraintTop_toBottomOf="@+id/lblCodigo_itomarasistencia" />
</androidx.constraintlayout.widget.ConstraintLayout>