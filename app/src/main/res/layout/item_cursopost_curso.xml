<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#FFF"
        android:layout_height="80dp"
        android:padding="6dp"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/imgIndicator_icursopostcurso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

        <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pbCargando_icursopostcurso"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <pe.edu.esan.appostgrado.view.util.AutoResizeTextView
            android:id="@+id/lblCursoPos_icursopostcurso"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:lines="4"
            android:textSize="15sp"/>

    <LinearLayout
            android:id="@+id/viewNota_icursopostcurso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

        <LinearLayout
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <pe.edu.esan.appostgrado.view.util.AutoResizeTextView
                    android:id="@+id/lblNota_icursopostcurso"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="4"
                    android:text="20"
                    android:textColor="#000"
                    android:textSize="11sp"/>

            <TextView
                    android:id="@+id/viewAsistencia_icursopostcurso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/asistencia"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/viewListaParticipantes_icursopostcurso"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_parent_p"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_lista"
                    android:textColor="#000"
                    android:textSize="11sp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/lblEncuesta_icursopostcurso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/encuestar"
            android:textColor="@color/esan_rojo"
            android:visibility="gone"/>

</LinearLayout>