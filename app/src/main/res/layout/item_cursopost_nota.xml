<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/rojo_muyclaro"
    android:layout_height="40dp">

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:id="@+id/relativeLayout3">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/s1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:background="@color/s2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_toRightOf="@+id/relativeLayout3"
        android:layout_toEndOf="@+id/relativeLayout3">

        <pe.edu.esan.appostgrado.view.util.AutoResizeTextView
            android:id="@+id/lblTipoNota_icursopostnota"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textStyle="italic"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/lblPeso_icursopostnota"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/lblNota_icursopostnota"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/s1"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>