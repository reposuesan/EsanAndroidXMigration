<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/md_grey_100">

    <TextView
        android:id="@+id/lblSCurso_histonotapre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/curso"
        android:textColor="@color/md_grey_800"
        app:layout_constraintBottom_toBottomOf="@+id/lblCredito_histonotapre"
        app:layout_constraintEnd_toStartOf="@+id/lblCiclo_histonotapre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblCiclo_histonotapre" />

    <TextView
        android:id="@+id/lblCiclo_histonotapre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="2017-01"
        android:textAlignment="center"
        android:textColor="@color/md_grey_800"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lblSPorGlobal_histonotapre"
        app:layout_constraintEnd_toStartOf="@+id/lblSPromedio_histonotapre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lblSCurso_histonotapre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSPromedio_histonotapre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/promedio_final"
        android:textAlignment="viewEnd"
        android:textColor="@color/md_grey_800"
        app:layout_constraintBottom_toBottomOf="@+id/lblPromedio_histonotapre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lblCiclo_histonotapre"
        app:layout_constraintTop_toTopOf="@+id/lblCiclo_histonotapre" />

    <TextView
        android:id="@+id/lblSCredito_histonotapre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/creditos"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/lblCredito_histonotapre"
        app:layout_constraintEnd_toStartOf="@+id/lblSPorGlobal_histonotapre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lblCiclo_histonotapre"
        app:layout_constraintTop_toBottomOf="@+id/lblCiclo_histonotapre" />

    <TextView
        android:id="@+id/lblSPorGlobal_histonotapre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/promedio"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/lblPromedio_histonotapre"
        app:layout_constraintEnd_toEndOf="@+id/lblCiclo_histonotapre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lblSCredito_histonotapre"
        app:layout_constraintTop_toBottomOf="@+id/lblCiclo_histonotapre" />

    <TextView
        android:id="@+id/lblCredito_histonotapre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="12"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lblSCredito_histonotapre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lblSCredito_histonotapre"
        app:layout_constraintTop_toBottomOf="@+id/lblSCredito_histonotapre" />

    <TextView
        android:id="@+id/lblPromedio_histonotapre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="15.5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lblSPorGlobal_histonotapre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/lblSPorGlobal_histonotapre"
        app:layout_constraintTop_toBottomOf="@+id/lblSPorGlobal_histonotapre" />

</androidx.constraintlayout.widget.ConstraintLayout>