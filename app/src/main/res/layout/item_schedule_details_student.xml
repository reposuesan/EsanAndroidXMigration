<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/md_white_1000">


    <TextView
            android:id="@+id/tv_hour_schedule_detail_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="18:00 - 18:50"
            android:textColor="@color/md_grey_800"
            android:textSize="18sp"
            android:background="@color/md_grey_80"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
            android:id="@+id/lblSCurso_ahorarioalumnodetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/curso_"
            android:textSize="15sp"
            android:textColor="@color/esan_rojo"
            app:layout_constraintBottom_toBottomOf="@+id/tv_course_schedule_detail_student"
            app:layout_constraintStart_toEndOf="@+id/view12"
            app:layout_constraintTop_toTopOf="@+id/tv_course_schedule_detail_student" />

    <TextView
            android:id="@+id/tv_course_schedule_detail_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            tools:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/tv_location_schedule_detail_student"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnRA_ahorarioalumnodetalle"
            app:layout_constraintStart_toEndOf="@+id/lblSProfesor_ahorarioalumnodetalle"
            app:layout_constraintTop_toBottomOf="@+id/tv_hour_schedule_detail_student" />

    <TextView
            android:id="@+id/tv_location_schedule_detail_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            tools:text="Valor"
            app:layout_constraintBottom_toTopOf="@+id/tv_teacher_schedule_detail_student"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnRA_ahorarioalumnodetalle"
            app:layout_constraintStart_toEndOf="@+id/lblSProfesor_ahorarioalumnodetalle"
            app:layout_constraintTop_toBottomOf="@+id/tv_course_schedule_detail_student" />

    <TextView
            android:id="@+id/lblSAula_ahorarioalumnodetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/aula_"
            android:textColor="@color/esan_rojo"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_location_schedule_detail_student"
            app:layout_constraintStart_toEndOf="@+id/view12"
            app:layout_constraintTop_toTopOf="@+id/tv_location_schedule_detail_student" />

    <TextView
            android:id="@+id/lblSProfesor_ahorarioalumnodetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/profesor_"
            android:textSize="15sp"
            android:textColor="@color/esan_rojo"
            app:layout_constraintBottom_toBottomOf="@+id/tv_teacher_schedule_detail_student"
            app:layout_constraintStart_toEndOf="@+id/view12"
            app:layout_constraintTop_toTopOf="@+id/tv_teacher_schedule_detail_student" />

    <TextView
            android:id="@+id/tv_teacher_schedule_detail_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/view11"
            app:layout_constraintEnd_toStartOf="@+id/imgBtnRA_ahorarioalumnodetalle"
            app:layout_constraintStart_toEndOf="@+id/lblSProfesor_ahorarioalumnodetalle"
            app:layout_constraintTop_toBottomOf="@+id/tv_location_schedule_detail_student" />

    <ImageView
            android:id="@+id/imgBtnRA_ahorarioalumnodetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_teacher_schedule_detail_student"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_course_schedule_detail_student"
            app:srcCompat="@drawable/raglass" />

    <View
            android:id="@+id/view12"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/s1"
            app:layout_constraintBottom_toBottomOf="@+id/lblSProfesor_ahorarioalumnodetalle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lblSCurso_ahorarioalumnodetalle" />

    <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/esan_rojo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
