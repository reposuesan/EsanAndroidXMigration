<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgAlumno_rowdetalleasistencia"
            android:layout_width="72dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imgAlumno_rowdetalleasistencia">
            <TextView
                android:id="@+id/lblAlumno_rowdetalleasistencia"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_margin="5dp"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="CÃ³digo:"/>
                <TextView
                    android:id="@+id/lblCodigo_rowdetalleasistencia"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#000"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                        android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/viewContentAsis_rowdetalleasistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
            android:layout_height="17dp"
            android:background="#EBEBF1" />

        <View
            android:id="@+id/viewFalta_rowdetalleasistencia"
            android:layout_width="300dp"
            android:layout_height="17dp"
            android:background="#E60A0A" />

        <View
            android:id="@+id/viewTardanza_rowdetalleasistencia"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:background="#EF9402" />

        <View
            android:id="@+id/viewAsistencia_rowdetalleasistencia"
            android:layout_width="100dp"
            android:layout_height="17dp"
            android:background="#14B40A" />

        <TextView
            android:id="@+id/lblPorcentajeAsis_rowdetalleasistencia"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="20%"
            android:textSize="11sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/lblPorcentajeTard_rowdetalleasistencia"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="20%"
            android:textSize="11sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/lblPorcentajeFalt_rowdetalleasistencia"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="20%"
            android:textSize="11sp"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/lblPorcentajeRest_rowdetalleasistencia"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:gravity="center"
            android:text="100.0%"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#555"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/esan_rojo" />

</LinearLayout>