<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/viewImgContent_imas"
        android:background="@drawable/borde_usuario"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgUsuario_imas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <TextView
        android:id="@+id/lblNombre_imas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:lines="2"
        android:textColor="@color/md_grey_900"
        android:textSize="18sp"
        tools:text="PAOLA PATRICIA GUZMAN FERNANDEZ"
        app:layout_constraintBottom_toTopOf="@+id/lblCorreo_imas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewImgContent_imas"
        app:layout_constraintTop_toTopOf="@+id/viewImgContent_imas" />

    <TextView
        android:id="@+id/lblCorreo_imas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        tools:text="alumno@esan.edu.pe"
        app:layout_constraintBottom_toBottomOf="@+id/viewImgContent_imas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewImgContent_imas"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre_imas" />
</androidx.constraintlayout.widget.ConstraintLayout>