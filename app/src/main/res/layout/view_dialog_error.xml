<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/superior"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            android:contentDescription="@string/description_imagen_generic" />

        <TextView
            android:text="Alerta"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size_title"
            android:letterSpacing="0"
            android:textAllCaps="true"
            android:id="@+id/error_tv_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/esan_rojo"
            tools:ignore="UnusedAttribute" />

        <TextView
            tools:text="Esto es un texto de prueba."
            android:id="@+id/error_tv_message"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/md_black_1000"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

    <Button
        android:layout_below="@+id/superior"
        android:id="@+id/error_bt_ok"
        android:background="@drawable/shape_button_active"
        android:text="Aceptar"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_button"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:letterSpacing="0"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="42dp"
        tools:ignore="UnusedAttribute" />

</RelativeLayout>