<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/esan_rojo</item>
        <item name="colorPrimaryDark">@color/rojo_oscuro</item>
        <item name="colorAccent">#d81b60</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/esan_rojo</item>
        <item name="colorPrimaryDark">@color/rojo_oscuro</item>
        <item name="colorAccent">@color/md_black_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
    </style>

    <style name="Progress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/esan_rojo</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="actionMenuTextColor">@color/md_white_1000</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
    </style>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/md_white_1000</item>
    </style>


    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">#00cf1111</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/esan_rojo</item>

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/md_grey_550</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/esan_rojo</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EsanAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/warning</item>
        <item name="android:textColor">@color/warning_text</item>
        <item name="android:textColorPrimary">@color/warning_text</item>
        <item name="android:textColorSecondary">@color/warning_text</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/esan_red</item>
    </style>


    <style name="EsanAlertDialogSuccess" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/success</item>
        <item name="android:textColor">@color/success_text</item>
        <item name="android:textColorPrimary">@color/success_text</item>
        <item name="android:textColorSecondary">@color/success_text</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/success_text</item>
        <item name="colorAccent">#3A4CB1</item>
    </style>


    <style name="EsanAlertDialogInformation" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/info</item>
        <item name="android:textColor">@color/info_text</item>
        <item name="android:textColorPrimary">@color/info_text</item>
        <item name="android:textColorSecondary">@color/info_text</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/info_text</item>
        <item name="colorAccent">#3A4CB1</item>
    </style>
    <style name="AppThemeNoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeNoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppThemeNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
