<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.vuforiamod.international.activities.InternationalCourseControllerActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppThemeNoActionBar.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_iwcursodetalle"
                app:title="@string/title_course"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppThemeNoActionBar.PopupOverlay"
                app:layout_scrollFlags="scroll|enterAlways">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbar" >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            <TextView
                    android:id="@+id/lblCurso_iwcursodetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Curso"
                    android:gravity="center"
                    android:background="#202020"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
            <TextView
                    android:id="@+id/lblCursoDetalle_iwcursodetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=""/>

            <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#202020">-->
                <TextView
                        android:id="@+id/lblProfesor_iwcursodetalle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#202020"
                        android:text="Profesor"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="17sp" />
            <!--</LinearLayout>-->

            <TextView
                    android:id="@+id/lblDescripcionProfesor_iwcursodetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text=""/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
