<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8">

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#CCC"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <pe.edu.esan.appostgrado.view.util.AutoResizeTextView
            android:id="@+id/lblCurso_itemhorariodetalleiw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#333"
            android:text="Curso"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblProfesor_itemhorariodetalleiw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Profesor"
                android:gravity="center_vertical"
                android:textColor="#4c4c4c"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:text="Aula"/>

                <TextView
                    android:id="@+id/lblAula_itemhorariodetalleiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#4c4c4c"
                    android:text="205"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:text="Idioma"/>

                <TextView
                    android:id="@+id/lblIdioma_itemhorariodetalleiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#4c4c4c"
                    android:text="EspaÃ±ol"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>